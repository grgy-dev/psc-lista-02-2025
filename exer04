import java.util.Scanner;

public class App {
    public static void main(String[] args) {
         Scanner input = new Scanner(System.in);
	    
	    System.out.print("Digite quantos litros foi colocado no carro : ");
        Float NumeroUm = input.nextFloat();
        System.out.print("Digite o valor da gasolina: ");
        Double NumeroDois = input.nextDouble();
        Double soma = NumeroUm * NumeroDois;

        System.out.printf("O valor da gasolina foi de: %.2f R$%n", soma);
        
    }
}
